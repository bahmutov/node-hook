{
  "name": "node-hook",
  "description": "Run source transform function on Node require",
  "version": "0.0.0-semantic-release",
  "main": "index.js",
  "scripts": {
    "test": "gt test/jsTest.js --output",
    "terminal-test": "node test/terminal-test.js",
    "use-case": "node test/use-case.js & node test/use-case-nested.js",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "issues": "git-issues",
    "check": "autochecker 0.12.9 4.0 5.0",
    "check-0.12": "autochecker 0.12.6",
    "commit": "commit-wizard",
    "size": "t=\"$(npm pack .)\"; wc -c \"${t}\"; tar tvf \"${t}\"; rm \"${t}\";"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bahmutov/node-hook.git"
  },
  "keywords": [
    "require",
    "node",
    "load",
    "hook",
    "transform"
  ],
  "author": "Gleb Bahmutov <gleb.bahmutov@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "git-issues": "1.2.0",
    "gt": "0.10.0",
    "pre-git": "3.8.3",
    "semantic-release": "6.2.1"
  },
  "files": [
    "index.js",
    "MIT-license.md"
  ],
  "config": {
    "pre-git": {
      "commit-msg": "simple",
      "pre-commit": [
        "npm test",
        "npm run use-case"
      ],
      "pre-push": ["npm run size"],
      "post-commit": [],
      "post-checkout": [],
      "post-merge": []
    }
  }
}
